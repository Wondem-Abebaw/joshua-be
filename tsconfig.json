{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@account/*": ["modules/account/*"],
      "@user/*": ["modules/user/*"],
      "@service/*": ["modules/service/*"],
      "@classification/*": ["modules/classification/*"],
      "@interaction/*": ["modules/interaction/*"],
      "@notification/*": ["modules/notification/*"],
      "@customer/*": ["modules/customer/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@activity-logger/*": ["modules/activity-logger/*"],
      "@configurations/*": ["modules/configurations/*"],
      "@chat/*": ["modules/chat/*"],
      "@advert/*": ["modules/advert/*"],
      "@request/*": ["modules/request/*"],
      "@payment/*": ["modules/payment/*"],
      "@institution/*": ["modules/institution/*"],
      "@performance/*": ["modules/performance/*"],
      "@libs/*": ["libs/*"]
    }
  }
}
